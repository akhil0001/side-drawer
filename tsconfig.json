{
  "compilerOptions": {
    "strict": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "allowJs": false,
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ]
  },
  "include": ["lib"],
  "exclude": ["node_modules"]
}
